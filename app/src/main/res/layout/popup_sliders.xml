<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/popup_background"
    android:padding="16dp">

    <!-- Title for the Popup -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adjust Your Daily Goals"
        android:textSize="18sp"
        android:textColor="@color/textColorPrimary"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="12dp" />

    <!-- Water Slider -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Water (L)"
            android:textSize="16sp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/waterValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.5 L"
            android:textSize="14sp"
            android:textColor="@color/textColorSecondary" />
    </LinearLayout>

    <SeekBar
        android:id="@+id/waterSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="500" />

    <!-- Calories Slider -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calories (kcal)"
            android:textSize="16sp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/caloriesValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1500 kcal"
            android:textSize="14sp"
            android:textColor="@color/textColorSecondary" />
    </LinearLayout>

    <SeekBar
        android:id="@+id/caloriesSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="3000" />

    <!-- Steps Slider -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Steps"
            android:textSize="16sp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/stepsValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8000 steps"
            android:textSize="14sp"
            android:textColor="@color/textColorSecondary" />
    </LinearLayout>

    <SeekBar
        android:id="@+id/stepsSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="20000" />

    <!-- Sleep Slider -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sleep (hrs)"
            android:textSize="16sp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/sleepValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7 hrs"
            android:textSize="14sp"
            android:textColor="@color/textColorSecondary" />
    </LinearLayout>

    <SeekBar
        android:id="@+id/sleepSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="12" />

    <!-- Weight Slider -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight (kg)"
            android:textSize="16sp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/weightValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="70 kg"
            android:textSize="14sp"
            android:textColor="@color/textColorSecondary" />
    </LinearLayout>

    <SeekBar
        android:id="@+id/weightSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="200" />

</LinearLayout>
